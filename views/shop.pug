extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://api.time.com/wp-content/uploads/2015/06/521811839-copy.jpg?quality=85&w=507&h=338&crop=1", alt="A book")
                        div.card__content 
                            h1.product__price #{product.price}
                            p.product__description #{product.description}
                        div.card__actions
                            button.btn Add to Cart
        else
            h1 No Products